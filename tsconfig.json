{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true, // ✅ permite default imports em libs CommonJS
    "allowSyntheticDefaultImports": true, // ✅ ajuda com imports antigos
    "skipLibCheck": true, // ✅ evita erros 
  },
  "exclude": [
    "node_modules",
    "dist",
    "knexfile.ts",
    "db" // <- ignora o knexfile
  ]
}